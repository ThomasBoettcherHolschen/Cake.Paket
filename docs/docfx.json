{
   "metadata":[
      {
         "src":[
            {
               "files":[
                  "**/*.csproj"
               ],
               "exclude":[
                  "**/bin/**",
                  "**/obj/**",
                  "Cake.Paket.UnitTests/**"
               ],
               "src":"../Source"
            }
         ],
         "dest":"api"
      }
   ],
   "build":{
      "content":[
         {
            "files":[
               "**/*.yml"
            ],
            "src":"api",
            "dest":"api"
         },
         {
            "files":[
               "manual/**/*.md",
               "*.md",
               "toc.yml"
            ]
         }
      ],
      "resource":[
         {
            "files":[
               "images/**"
            ]
         }
      ],
      "overwrite":[
         {
            "files":[
               "apispec/**.md"
            ]
         }
      ],
      "dest":"site"
   }
}
